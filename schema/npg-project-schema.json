{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A project description for the Network Playground",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "id": {
            "type": "integer"
        },
        "topology": {
            "type": "object",
            "properties": {
                "backends": {
                    "type": "array",
                    "minItems": 1,
                    "description": "List of backend servers",
                    "items": {
                        "type": "object",
                        "properties": {
                            "host": {
                                "type": "string"
                            }
                        }
                    }
                },
                "nodes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "backend": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            },
                            "image": {
                                "type": "string"
                            },
                            "x": {
                                "type": "integer"
                            },
                            "y": {
                                "type": "integer"
                            }
                        },
                        "required": [
                            "backend",
                            "name",
                            "image"
                        ]
                    }
                },
                "links": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "nodes": {
                                "type": "array",
                                "minItems": 2,
                                "items": {
                                    "type": "string"
                                }
                            },
                            "x": {
                                "type": "integer"
                            },
                            "y": {
                                "type": "integer"
                            },
                            "netem": {
                                "type": "object",
                                "properties": {
                                    "node": {
                                        "type": "string"
                                    },
                                    "bw_up": {
                                        "type": "integer"
                                    },
                                    "bw_down": {
                                        "type": "integer"
                                    },
                                    "delay_up": {
                                        "type": "integer"
                                    },
                                    "delay_down": {
                                        "type": "integer"
                                    }
                                },
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "name",
                            "nodes"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "backends",
                "nodes",
                "links"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "name",
        "topology"
    ],
    "additionalProperties": false
}
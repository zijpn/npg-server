{
  "name": "npg-server",
  "version": "0.1.0",
  "private": true,
  "description": "Network PlayGround Server",
  "scripts": {
    "build": "tsc",
    "docker-build": "VERSION=`node -pe \"require('./package.json').version\"` && npm run build && docker build -t npg-server:${VERSION} .",
    "docker": "VERSION=`node -pe \"require('./package.json').version\"` && docker run --name npg-server --rm -it -p 8080:8080 npg-server:${VERSION}",
    "serve": "ts-node src",
    "lint": "tslint -t stylish -c tslint.json -p tsconfig.json --fix",
    "schema": "ajv -s schema/npg-project-schema -d schema/npg-project",
    "dep": "npm-check -s",
    "test": "jest --coverage --no-cache --verbose",
    "start": "NODE_ENV=production PORT=8080 node dist"
  },
  "dependencies": {
    "dateformat": "^3.0.3",
    "dockerode": "^2.5.4",
    "execa": "^0.10.0",
    "express": "^4.16.3",
    "socket.io": "^2.0.4",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/dateformat": "^1.0.1",
    "@types/dockerode": "^2.5.4",
    "@types/execa": "^0.9.0",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.0",
    "@types/socket.io": "^1.4.32",
    "@types/std-mocks": "^1.0.0",
    "@types/winston": "^2.3.8",
    "ajv-cli": "^3.0.0",
    "jest": "^22.4.3",
    "npm-check": "^5.6.0",
    "std-mocks": "^1.0.1",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}

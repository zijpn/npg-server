{
  "name": "npg-server",
  "version": "0.1.0",
  "private": true,
  "description": "Network PlayGround Server",
  "scripts": {
    "build": "tsc",
    "docker-build": "VERSION=`node -pe \"require('./package.json').version\"` && npm run build && docker build -t npg-server:${VERSION} .",
    "docker": "VERSION=`node -pe \"require('./package.json').version\"` && docker run --name npg-server --rm -it -p 8080:8080 npg-server:${VERSION}",
    "serve": "node dist",
    "lint": "tslint -t stylish -c tslint.json -p tsconfig.json --fix",
    "schema": "ajv compile -s schema/schema.json && ajv -s schema/schema.json -d schema/example.json",
    "dep": "npm-check -s",
    "test": "jest --coverage --no-cache",
    "start": "NODE_ENV=production PORT=8080 npm run serve"
  },
  "dependencies": {
    "dateformat": "^3.0.3",
    "express": "^4.16.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/dateformat": "^1.0.1",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.4",
    "@types/node": "^9.4.6",
    "@types/std-mocks": "^1.0.0",
    "@types/winston": "^2.3.8",
    "ajv-cli": "^3.0.0",
    "jest": "^22.4.2",
    "npm-check": "^5.5.2",
    "std-mocks": "^1.0.1",
    "ts-jest": "^22.4.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}

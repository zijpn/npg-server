{
  "name": "npg-server",
  "productName": "npg",
  "version": "0.1.0",
  "main": "dist/main.js",
  "private": true,
  "description": "Network PlayGround",
  "scripts": {
    "build": "npm rebuild node-pty && tsc",
    "build:docker": "VERSION=`node -pe \"require('./package.json').version\"` && npm run build && docker build -t npg-server:${VERSION} .",
    "build:linux": "tsc && electron-rebuild -f -w node-pty && electron-packager . --platform=linux --arch=x64 --prune=true --out=packages --overwrite",
    "build:mac": "tsc && electron-rebuild -f -w node-pty && electron-packager . --platform=darwin --arch=x64 --prune=true --out=packages --overwrite",
    "docker": "VERSION=`node -pe \"require('./package.json').version\"` && docker run --name npg-server --rm -it -p 8080:8080 npg-server:${VERSION}",
    "electron": "tsc && electron-rebuild -f -w node-pty && electron dist/main.js",
    "serve": "npm rebuild node-pty && PORT=3000 ts-node src/index.ts",
    "dev": "npm rebuild node-pty && NODE_ENV=development ts-node-dev --no-deps --respawn --transpileOnly src/index.ts",
    "lint": "tslint -t stylish -c tslint.json -p tsconfig.json --fix",
    "schema:api": "ajv -s schema/api/asyncapi -d schema/api/npgapi",
    "schema:project": "ajv -s schema/project/schema -d schema/project/example",
    "dep": "npm-check -s",
    "test": "jest --coverage --no-cache --verbose",
    "start": "NODE_ENV=production node dist"
  },
  "dependencies": {
    "dockerode": "^2.5.7",
    "execa": "^1.0.0",
    "express": "^4.16.4",
    "node-pty": "^0.7.8",
    "socket.io": "^2.1.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/dockerode": "^2.5.6",
    "@types/execa": "^0.9.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.2",
    "@types/socket.io": "^2.1.0",
    "@types/socket.io-client": "^1.4.32",
    "@types/std-mocks": "^1.0.0",
    "ajv-cli": "^3.0.0",
    "electron": "^3.0.8",
    "electron-packager": "^12.2.0",
    "electron-rebuild": "^1.8.2",
    "jest": "^23.6.0",
    "npm-check": "^5.9.0",
    "std-mocks": "^1.0.1",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.30",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
